<div class="container-fluid my-3">

      <h1 class="text-center text-success">Games</h1>  
      <hr>
      
      <div class="row">
        <div class="col-md-12">
          <%= link_to 'Add New Game', new_game_path, class: 'btn btn-primary my-2 float-right' %>
        </div>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>

        <% if @games.length > 0  %>
          
            <% @games.each_with_index do |game,index| %>
              <tr>
                <td><%= (index+1) %></td>        
                <td><%= game.name %></td>        
                <td><%= game.start_date %></td>
                <td><%= game.end_date %></td>
                <td>
                  <%= link_to 'Show', game_path(game), class: 'p-1 text-success'%>
                  <%= link_to 'Edit', edit_game_path(game), class: 'p-1 text-primary' %>
                  <%= link_to 'Delete', game_path(game), method: :delete, data: { confirm: 'Are you sure?' }, class: 'p-1 text-danger' %>
                </td>
              </tr>
            <% end %>

        <% else %>
              <tr>
                  <td colspan="5" class="text-center"> No records found !! </td>
              </tr>
        <% end %>

        </tbody>
      </table>
</div>
