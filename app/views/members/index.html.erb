<div class="container-fluid my-3">

      <h1 class="text-center text-success">Members</h1>  
      <hr>
      
      <div class="row">
        <div class="col-md-12">
          <%= link_to 'Add New Member', new_member_path(), class: 'btn btn-primary my-2 float-right' %>
        </div>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Contact Number</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
        <% if @members.length > 0  %>  

          <% @members.each_with_index do |member,index| %>
            <tr>
              <td><%= (index+1) %></td>        
              <td><%= member.first_name %></td>        
              <td><%= member.last_name %></td>
              <td><%= member.email %></td>
              <td><%= member.contact_number %></td>
              <td>
                <%= link_to 'Show', member_path(member), class: 'p-1 text-success'%>
                <%= link_to 'Edit', edit_member_path(member), class: 'p-1 text-primary' %>
                <%= link_to 'Delete', member_path(member), method: :delete, data: { confirm: 'Are you sure?' }, class: 'p-1 text-danger' %>
              </td>
            </tr>
          <% end %>

        <% else %>
            <tr>
                  <td colspan="5" class="text-center"> No records found !! </td>
            </tr>
        <% end%>
        </tbody>
      </table>
</div>
