<div class="container-fluid my-5">

  <div class="row">    
    <div class="col-md-3"></div>    

    <div class="col-md-6">

      <%= form_with model: @member, local: true do |f| %>

        <div class="card">
            
            <div class="card-header">
              <h4 class="justify-content-center text-center text-secondary"> 
                <%= @member.new_record? ? 'Add Member' : 'Edit Member'%>
              </h4>
            </div>

            <div class="card-body align-items-center justify-content-center">
            
              <div class="row d-flex">
                <div class="col-md-12">
                    <div class="form-group">
                      <label for="first_name" class="font-weight-bold">First Name:</label>            
                      <%= f.text_field :first_name, required: true, class: "form-control", placeholder: 'Enter first name' %>
                    </div>
                </div>      
              </div>

              <div class="row d-flex">
                <div class="col-md-12">
                    <div class="form-group">
                      <label for="last_name" class="font-weight-bold">Last Name:</label>            
                      <%= f.text_field :last_name, required: true, class: "form-control", placeholder: 'Enter last name' %>
                    </div>
                </div>      
              </div>

              <div class="row d-flex">
                <div class="col-md-12">
                    <div class="form-group">
                      <label for="email" class="font-weight-bold">Email:</label>            
                      <%= f.email_field :email, required: true, class: "form-control", placeholder: 'Enter email address' %>
                    </div>
                </div>      
              </div>

              <div class="row d-flex">
                <div class="col-md-12">
                    <div class="form-group">
                      <label for="contact_number" class="font-weight-bold">Contact Number:</label>            
                      <%= f.text_field :contact_number, required: true, class: "form-control", placeholder: 'Format : xxx-xxx-xxxx ',input_html: {minlength:  10, maxlength: 10} %>
                    </div>
                </div>      
              </div>
                            
            </div>

            <div class="row">
              <div class="col-md-12">
                <%= f.submit "Submit", disable_with: 'Submiting...', class: "btn btn-primary float-right my-3" %>
                <%= link_to 'cancel', members_path(),  class: "btn btn-danger float-right my-3 mr-2"  %>
              </div>
            </div>

        </div>

      </div>
      <div class="col-md-3"></div>
    </div>

  <% end %>
</div>

