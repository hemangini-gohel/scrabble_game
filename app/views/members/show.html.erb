<div class="container-fluid my-5">

  <div class="row">    
    <div class="col-md-3"></div>    

    <div class="col-md-6">
      
      <%= link_to 'Back', members_path(), class: 'btn btn-sm btn-primary my-2' %>       
        <div class="card">
            
            <div class="card-header">
              <h4 class="justify-content-center text-center text-secondary"> 
                Game Details
              </h4>
            </div>

            <div class="card-body align-items-center justify-content-center">
            
              <div class="row d-flex">
                <div class="col-md-12">
                    <div class="form-group">
                      <label for="first_name" class="font-weight-bold">First Name:</label>
                      <p class='form-control'> 
                        <%= @member.first_name%>
                      </p>
                    </div>
                </div>      
              </div>

              <div class="row d-flex">
                <div class="col-md-12">
                    <div class="form-group">
                      <label for="last_name" class="font-weight-bold">Last Name:</label>
                      <p class='form-control'> 
                        <%= @member.last_name%>
                      </p>
                    </div>
                </div>      
              </div>

              <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                      <label for="email" class="font-weight-bold">Email:</label>                
                        <p class='form-control'>
                          <%= @member.email%>
                        </p>
                    </div>
                </div>
                      
                <div class="col-md-6">
                    <div class="form-group">
                      <label for="contact_number" class="font-weight-bold">Contact Number:</label>                  
                        <p class='form-control'>
                          <%= @member.contact_number %> 
                        </p>
                    </div>
                </div>
              </div>

              <hr>
              <div class="row">
                <div class="col-md-4">
                    <div class="form-group">                  
                      <label for="player1_id" class="font-weight-bold">No of wins :</label>
                      <p class='form-control'>
                         <%= @no_of_win %>
                      </p>
                    </div>
                </div>
                      
                <div class="col-md-4">
                    <div class="form-group">
                      <label for="start_date" class="font-weight-bold">No of Loose :</label>    
                        <p class='form-control'>
                            <%= @no_of_loose %>
                        </p>                  
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                      <label for="start_date" class="font-weight-bold">Average Score :</label>    
                        <p class='form-control'>
                            <%= @average_score %>
                        </p>                  
                    </div>
                </div>
              </div>

              <% if @highest_score_data.present?%>
                <hr>                          

                <div class="row">
                  <div class="col-md-6">
                      <div class="form-group">                  
                        <label for="player2_id" class="font-weight-bold">Highest Score : <span class="font-weight-normal"><%= @highest_score_data&.score %></span></label><br>
                        <label for="player2_id" class="font-weight-bold">On date : <span class="font-weight-normal"><%= @highest_score_data&.created_at&.strftime("%d/%m/%Y") %></span></label><br>
                        <label for="player2_id" class="font-weight-bold">Against whom : <span class="font-weight-normal"><%= @second_player&.first_name %></span></label>
                      </div>
                  </div>
                                          
                </div>
              <% end %>
            </div>
          
        </div>

      </div>
      <div class="col-md-3"></div>
    </div>
</div>

