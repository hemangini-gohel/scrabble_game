<div class="container-fluid my-3">

      <h1 class="text-center text-success">Leader Board</h1>  

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Average Score</th>            
          </tr>
        </thead>

        <tbody>

        <% if @members.length > 0  %>  

            <% @members.each_with_index do |member,index| %>
              <tr>
                <td><%= (index+1) %></td>        
                <td><%= member.first_name %></td>        
                <td><%= member.last_name %></td>
                <td><%= member.avg_score.to_i %></td>                        
              </tr>
            <% end %>
        <% else %>
            <tr>
                  <td colspan="5" class="text-center"> No records found !! </td>
            </tr>
        <% end %>
        </tbody>
      </table>
</div>
